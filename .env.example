# Environment Configuration
NEXT_PUBLIC_APP_URL=https://hexora.io
NEXT_PUBLIC_API_URL=https://api.hexora.io

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/hexora

# Authentication
NEXTAUTH_SECRET=your-secret-key
NEXTAUTH_URL=https://hexora.io

# Web3
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your-project-id
NEXT_PUBLIC_INFURA_API_KEY=your-infura-key

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# Feature Flags
NEXT_PUBLIC_ENABLE_GUEST_MODE=true
NEXT_PUBLIC_ENABLE_I18N=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# API Keys (Server-side only)
OPENAI_API_KEY=your-openai-key
STRIPE_SECRET_KEY=your-stripe-secret-key
GITHUB_TOKEN=your-github-token

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your-sentry-dsn